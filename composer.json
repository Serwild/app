{
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^7.3",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "guzzlehttp/guzzle": "^6.3",
        "ramsey/uuid": "^3.8",
        "sensio/framework-extra-bundle": "^5.1",
        "serwild/core": "^1.0",
        "symfony/asset": "4.2.*",
        "symfony/console": "4.2.*",
        "symfony/dotenv": "4.2.*",
        "symfony/expression-language": "4.2.*",
        "symfony/flex": "^1.1",
        "symfony/form": "4.2.*",
        "symfony/framework-bundle": "4.2.*",
        "symfony/monolog-bundle": "^3.1",
        "symfony/orm-pack": "*",
        "symfony/process": "4.2.*",
        "symfony/security-bundle": "4.2.*",
        "symfony/serializer-pack": "*",
        "symfony/translation": "4.2.*",
        "symfony/twig-bundle": "4.2.*",
        "symfony/validator": "4.2.*",
        "symfony/web-link": "4.2.*",
        "symfony/webpack-encore-bundle": "^1.7",
        "symfony/yaml": "4.2.*"
    },
    "require-dev": {
        "object-calisthenics/phpcs-calisthenics-rules": "^3.4",
        "phpstan/phpstan": "^0.11.2",
        "phpunit/phpunit": "^8.4",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "3.4.0",
        "symfony/debug-pack": "*",
        "symfony/profiler-pack": "*",
        "symfony/test-pack": "^1.0",
        "symfony/web-server-bundle": "4.2.*"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Infrastructure\\": "src/Infrastructure/",
            "Application\\": "src/Application/",
            "Domain\\": "src/Domain/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Infrastructure\\": "tests/Infrastructure/",
            "Application\\": "tests/Application/",
            "Domain\\": "tests/Domain/"
        }
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "assets": "yarn encore dev",
        "test": [
            "@phpcs",
            "@phpstan",
            "@phpunit"
        ],
        "phpunit": "./vendor/bin/phpunit tests --colors=always --do-not-cache-result",
        "phpstan": "./vendor/bin/phpstan analyse src -l 7",
        "phpcs": "./vendor/bin/phpcs src -n --standard=phpcs.xml",
        "phpunit-bridge": "./vendor/bin/simple-phpunit tests --colors=always --do-not-cache-result"
    }
}
